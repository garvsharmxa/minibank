							"raw": "{{base_url}}/api/notifications?page=0&size=20",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"notifications"
							],
							"query": [
								{
									"key": "page",
									"value": "0",
									"description": "Page number (0-indexed)"
								},
								{
									"key": "size",
									"value": "20",
									"description": "Page size"
								}
							]
						},
						"description": "Get paginated notifications for authenticated user."
					},
					"response": []
				},
				{
					"name": "Get Unread Notifications",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/notifications/unread",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
